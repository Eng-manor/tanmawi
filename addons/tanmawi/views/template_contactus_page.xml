<odoo>
    <data>
        <template id="tanmawi.contactus_page">

            <t t-call="tanmawi.warrper_front_layout">

                <t t-set="page_warpper_main">
                    <section class="page-banner">
                        <div class="image-layer lazy-image" data-bg="url('/tanmawi/static/tanmwi/public/images/background/contact.jpg')"></div>
                        <div class="bottom-rotten-curve"></div>

                        <div class="auto-container">
                            <h1 style="font-family:'Droid Arabic Kufi';">تواصل معنا</h1>

                        </div>

                    </section>


                    <section class="contact-info-section">
                        <div class="auto-container">


                            <div class="info-boxes">
                                <div class="row clearfix">

                                    <div class="info-box col-lg-4 col-md-6 col-sm-12"></div>
                                    <!--Info Box-->
                                    <div class="info-box col-lg-4 col-md-6 col-sm-12">
                                        <div class="inner-box wow fadeInUp" data-wow-delay="600ms">
                                            <div class="image-layer lazy-image" data-bg="url('/tanmawi/static/tanmwi/public/images/resource/contact-image-3.jpg')"></div>
                                            <div class="icon-box">
                                                <span class="flaticon-email"></span>
                                            </div>
                                            <h4 style="font-family: 'Droid Arabic Kufi';">البريد الالكتروني</h4>
                                            <ul>
                                                <li>
                                                    <a href="mailto:info@tanmwi.com">info@tanmwi.com</a>
                                                </li>

                                            </ul>
                                        </div>
                                    </div>

                                    <!--Info Box-->
                                    <div class="info-box col-lg-4 col-md-6 col-sm-12"></div>

                                </div>
                            </div>

                        </div>
                    </section>

                    <section class="contact-section">
                        <div class="outer-container clearfix">
                            <div class="form-column clearfix">
                                <div class="inner clearfix">

                                    <div class="sec-title centered">

                                        <h2 style="font-family: 'Droid Arabic Kufi'; right: 0;">أترك رسالة</h2>

                                    </div>

                                    <div class="contact-form">
                                        <form method="post" action="/connect">
                                            <div class="row clearfix">
                                                <div class="col-md-12 col-sm-12 form-group">
                                                    <input type="text" name="username" placeholder="اسمك" required="" style="font-family: 'Droid Arabic Kufi';"/>
                                                </div>

                                                <div class="col-md-12 col-sm-12 form-group">
                                                    <input type="text" name="mobile" placeholder="رقم الجوال" required="" style="font-family: 'Droid Arabic Kufi';"/>
                                                </div>
                                                <div class="col-md-12 col-sm-12 form-group">
                                                    <input type="email" name="email" placeholder="بريدك الالكتروني" required="" style="font-family: 'Droid Arabic Kufi';"/>
                                                </div>

                                                <div class="col-md-12 col-sm-12 form-group">
                                                    <input type="text" name="sub" placeholder="موضوع الرساله الاستفسار" required="" style="font-family: 'Droid Arabic Kufi';"/>
                                                </div>


                                                <div class="col-md-12 col-sm-12 form-group">
                                                    <textarea name="message" placeholder="رسالتك هنا" required="" style="font-family: 'Droid Arabic Kufi';"></textarea>
                                                </div>

                                                <div class="col-md-12 col-sm-12 form-group text-center">
                                                    <button class="theme-btn btn-style-one" type="submit" name="submit-form">
                                                        <span class="btn-title" style="font-family: 'Droid Arabic Kufi';">ارسال</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>


                                </div>
                            </div>

                        </div>
                    </section>


                </t>
            </t>
        </template>
    </data>
</odoo>